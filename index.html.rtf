    async function callApi(action, payload = \{\}) \{\
      try \{\
        const response = await fetch(API_URL, \{\
          method: 'POST',\
          headers: \{ 'Content-Type': 'text/plain;charset=utf-8' \},\
          body: JSON.stringify(\{ action, payload \}),\
          redirect: 'follow'\
        \});\
        if (!response.ok) throw new Error(`\uc0\u1054 \u1096 \u1080 \u1073 \u1082 \u1072  \u1089 \u1077 \u1090 \u1080 : $\{response.statusText\}`);\
        const result = await response.json();\
        if (!result.success) throw new Error(result.message || '\uc0\u1053 \u1077 \u1080 \u1079 \u1074 \u1077 \u1089 \u1090 \u1085 \u1072 \u1103  \u1086 \u1096 \u1080 \u1073 \u1082 \u1072  API.');\
        return result.data;\
      \} catch (error) \{\
        console.error('\uc0\u1054 \u1096 \u1080 \u1073 \u1082 \u1072  \u1074 \u1099 \u1079 \u1086 \u1074 \u1072  API:', error);\
